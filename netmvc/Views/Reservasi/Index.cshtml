@model IEnumerable<netmvc.Models.Vw_Reservasi>
@{
    ViewBag.Title = "Reservasi";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@section Styles
{
    @Styles.Render("~/Content/datatablecss")
}

@section Script{
    @Scripts.Render("~/bundles/datatablescript")
}

<!-- row -->

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    @if (ViewBag.Message != null)
                    {
                        <div class="card-content">
                            <div class="alert alert-success alert-dismissible fade show">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button> @ViewBag.Message
                            </div>
                        </div>
                    }
                    <div class="row">
                        <div class="col col-6">
                            <h4 class="card-title">@ViewBag.Title</h4>
                        </div>
                        <div class="col col-6 text-right">
                            <a href="@Url.Action("Create","Reservasi")" class="btn btn-primary ">Add New Item</a>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Subject</th>
                                    <th>Room</th>
                                    <th>Date</th>
                                    <th>Start</th>
                                    <th>End</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int urutan = 0; }
                                @foreach (var item in Model)
                                {
                                    urutan = urutan + 1;
                                    <tr>
                                        <td>@urutan</td>
                                        <td>@item.SubjectReservasi</td>
                                        <td>@item.NamaRuangan</td>
                                        <td>@item.TanggalReservasi</td>
                                        <td>@item.JamMulai</td>
                                        <td>@item.JamSelesai</td>
                                        <td>
                                            <span>
                                                <a href="@Url.Action("Edit", "Reservasi", new { id = item.Reservasi_PK })" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-pencil color-muted m-r-5"></i> </a>
                                                <a href="@Url.Action("Delete", "Reservasi", new { id = item.Reservasi_PK })" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fa fa-close color-danger"></i></a>
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>No</th>
                                    <th>Subject</th>
                                    <th>Room</th>
                                    <th>Date</th>
                                    <th>Start</th>
                                    <th>End</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
